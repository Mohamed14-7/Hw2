<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:id="@+id/master">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:background="@color/footer"></androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/person"
        android:layout_marginTop="20sp" />

    <TextView
        android:id="@+id/tv_open"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@id/imageView_icon"
        android:gravity="center"
        android:text="Open"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />


    <ImageView
        android:id="@+id/imageView_add"
        android:layout_width="51dp"
        android:layout_height="42dp"
        android:src="@drawable/add"
        android:layout_alignParentEnd="true"
        tools:ignore="NotSibling"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="25sp" />

    <ImageView
        android:id="@+id/imageView_diamond"
        android:layout_width="51dp"
        android:layout_height="42dp"
        android:src="@drawable/diamond"
        android:layout_toStartOf="@id/imageView_add"
        tools:ignore="NotSibling"
        android:layout_marginTop="25sp" />

    <ImageView
        android:id="@+id/imageView_schedule"
        android:layout_width="46dp"
        android:layout_height="51dp"
        android:layout_below="@id/recyclerView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="39dp"
        android:src="@drawable/schedule"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginStart="15dp"
        android:text="Recent"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_toEndOf="@id/imageView_schedule"
        android:layout_below="@id/recyclerView" />


    <ImageView
        android:id="@+id/imageView_gperson"
        android:layout_width="39dp"
        android:layout_height="54dp"
        android:layout_below="@id/imageView_schedule"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/group_person" />

    <TextView
        android:id="@+id/textView_gperson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shared with me"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/textView_recent"
        android:layout_toEndOf="@id/imageView_gperson"
        android:layout_marginTop="45dp"
        android:layout_marginStart="15dp" />

    <ImageView
        android:id="@+id/imageView_cloud"
        android:layout_width="40dp"
        android:layout_height="63dp"
        android:layout_below="@id/imageView_gperson"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/cloud" />


    <TextView
        android:id="@+id/textView_cloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shared with me"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@id/textView_gperson"
        android:layout_toEndOf="@id/imageView_gperson"
        android:layout_marginTop="45dp"
        android:layout_marginStart="15dp" />


    <ImageView
        android:id="@+id/imageView_phone"
        android:layout_width="33dp"
        android:layout_height="51dp"
        android:layout_below="@id/imageView_cloud"
        android:layout_marginStart="17dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/smartphone" />

    <TextView
        android:id="@+id/textView_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_cloud"
        android:layout_marginStart="15dp"
        android:layout_marginTop="42dp"
        android:layout_toEndOf="@id/imageView_phone"
        android:text="Shared with me"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFooter"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        android:background="@color/footer"
        android:layout_alignParentBottom="true">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/textView_recentFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:text="Recent" />

    <ImageView
        android:id="@+id/imageView_recentFooter"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_above="@id/textView_recentFooter"
        android:src="@drawable/schedule" />

    <TextView
        android:id="@+id/textView_gPersonFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:text="Shared"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView_gPersonFooter"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_above="@id/textView_recentFooter"
        android:src="@drawable/group_person"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/textView_folderFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:textColor="#FF3800"
        android:layout_marginBottom="10dp"
        android:text="Open"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView_folderFooter"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_marginEnd="24dp"
        android:layout_above="@id/textView_recentFooter"
        android:src="@drawable/folder"
        android:layout_alignParentEnd="true"
        app:tint="#FF3A00" />

</RelativeLayout>